<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.david.morfeo.numerosprimos.Principal">

    <TextView
        android:id="@+id/labelTitulo"
        android:layout_width="283dp"
        android:layout_height="82dp"
        android:layout_marginEnd="56dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="16dp"
        android:text="@string/primero"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/labelTexto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/labelTexto"
        android:layout_width="284dp"
        android:layout_height="162dp"
        android:layout_marginEnd="54dp"
        android:layout_marginStart="46dp"
        android:text="@string/textoLargo"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/numUsu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labelTitulo" />


    <Button
        android:id="@+id/botonCalcular"
        android:layout_width="109dp"
        android:layout_height="48dp"
        android:layout_marginEnd="214dp"
        android:layout_marginStart="61dp"
        android:text="@string/calcu"
        app:layout_constraintBottom_toTopOf="@+id/labelrespuesta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numUsu" />

    <EditText
        android:id="@+id/numUsu"
        android:layout_width="171dp"
        android:layout_height="46dp"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/botonCalcular"
        app:layout_constraintStart_toEndOf="@+id/labelPosicion"
        app:layout_constraintTop_toBottomOf="@+id/labelTexto" />

    <TextView
        android:id="@+id/labelPosicion"
        android:layout_width="77dp"
        android:layout_height="28dp"
        android:layout_marginBottom="7dp"
        android:layout_marginStart="61dp"
        android:layout_marginTop="11dp"
        android:text="@string/posicion"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/botonCalcular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labelTexto"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/labelrespuesta"
        android:layout_width="266dp"
        android:layout_height="145dp"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="59dp"
        android:layout_marginStart="59dp"
        android:textAlignment="center"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonCalcular" />

</android.support.constraint.ConstraintLayout>
